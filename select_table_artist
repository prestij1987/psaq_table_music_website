

import pip
import sqlalchemy


from pprint import pprint

engine = sqlalchemy.create_engine('postgresql://postgres:terzot13@localhost:5432/netology2021')
pprint(engine)

connection = engine.connect()
print(connection)
pprint(engine.table_names())

