# Названия сборников, вышедших в период с 2018 по 2020 год включительно

select_4 = connection.execute('''SELECT name FROM collections
WHERE release_data BETWEEN '2018-01-01' AND '2020-12-31';
''').fetchall()
pprint(select_4)

